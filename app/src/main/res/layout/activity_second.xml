<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="#28323B">
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="9dp"
        app:cornerRadius="10dp"
        android:text="@string/next"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        android:textStyle="bold"
        android:background="@drawable/ic_btn_bg"/>
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        app:values="@array/Slider"
        android:contentDescription="Price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="386dp"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="240dp"
        app:thumbColor="@color/purple2"
        app:trackColorActive="@color/blue2"
        app:trackColorInactive="@color/white"
        app:thumbRadius="8dp" />
    <TextView
        android:layout_width="28dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Price"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginTop="369dp"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="258dp"/>
    <com.google.android.material.slider.RangeSlider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        app:values="@array/Slider"
        android:contentDescription="Accessibility"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="481dp"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="145dp"
        app:thumbColor="@color/purple2"
        app:trackColorActive="@color/blue2"
        app:trackColorInactive="@color/white"
        app:thumbRadius="8dp" />
    <TextView
        android:layout_width="67dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Accessibility"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginTop="464dp"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="163dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="Type"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="387dp"
        android:layout_marginBottom="212dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="227dp"
        android:background="@drawable/ic_text_corners"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:paddingTop="11dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="400dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="224dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Category"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginTop="369dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="258dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participants"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="184dp"
                android:layout_marginStart="137dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="135dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accessibility"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="21dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="251dp"
                android:layout_marginTop="184dp"
                android:textColor="@color/black"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="128dp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginBottom="168dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="128dp"
              android:layout_marginTop="16dp"
              android:background="@drawable/ic_corner_radius"
              android:textSize="14sp"
              android:paddingHorizontal="25dp"
              android:textColor="@color/white"
              android:text="Category"/>
            <ImageButton
                android:id="@+id/heart_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_selector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="304dp"
                android:layout_marginBottom="168dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/text_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Result"
                android:textColor="@color/black"
                android:layout_marginTop="66dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="62dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="62dp" />
            <TextView
                android:id="@+id/text_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="free"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="160dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="264dp"
                android:layout_marginStart="32dp"/>
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="176dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="264dp"
                android:layout_marginStart="32dp"/>
            <View
                android:layout_width="81dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="168dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="247dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ic_progressbar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="156dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon"
                    android:layout_marginHorizontal="4dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon3"
                    android:layout_marginHorizontal="4dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon4"/>

            </LinearLayout>
















        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>



            
       




</androidx.constraintlayout.widget.ConstraintLayout>